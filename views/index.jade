extends layout

block content
    script(type='text/javascript', src='/javascripts/browse.js')
    script(type='text/javascript', src='/javascripts/view.js')

    nav.hidden
        .sort
            .selected-sort
                //- span.sortTitle Sort:
                span.name Newest
            ul
                li.item(data-attr='timestamp', data-dir='desc') Newest
                li.item(data-attr='timestamp', data-dir='asc') Oldest
                li.item(data-attr='likes', data-dir='desc') Popular
        .create
            button Create
    .content.browse-page
        #viewId #{toteID}
        #sort #{sort}
        .browse-tote-wrap
        .zoomTransition
            .zoomAnimationWrapper
        .view-carousel
            .view-carousel-wrap
            .view-controls
                button.arrow.left
                .heart-outer-wrap
                    .heart-wrap
                        .heart-circle
                        .heart
                            .inner-heart.grey
                            .inner-heart.magenta
                            .inner-heart.white
                button.arrow.right
            button.close
